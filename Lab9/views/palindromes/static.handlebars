<div class="row">
  <div class="col-sm-12">
    <form id="static-form" method="post">
      <div class="form-group">
        <label for="textarea">Enter text and click submit</label>
        <input type="textarea" class="form-control" id="textarea" name="textarea" value="{{textarea}}">
      </div>
      
      <div class="form-group hidden" id="error-container">
        <div class="alert alert-danger text-goes-here">
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
      <div class="form-group hidden" id="result-container">
          <div class="alert alert-success text-goes-here">
          </div>
      </div>

      <div id = "attempts" class="is-palindrome">
        <ol id = "attempts">
        </ol>
      </div>

      <div id = "attempts" class="not-palindrome">
        <ol id = "attempts">
        </ol>
      </div>

    </form>
  </div>
</div>
