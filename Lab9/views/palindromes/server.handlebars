<div class="row">
  <div class="col-sm-12">
    <form class="server-form" method="post">
      <div class="form-group">
        <label for="textarea">Enter text and click submit</label>
        <input type="textarea" class="form-control" id="textarea" name="textarea" value="{{textarea}}">
      </div>
      {{#if error }}
      <div class="form-group">
        <div class="alert alert-danger">
          {{ error }}
        </div>
      </div>
      {{/if}}
      <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
      {{#if class }}
      <div class="form-group">
        <div class="alert alert-success">
          The result is: {{ class }}
        </div>
      </div>
      {{!-- <div id = "attempts" class={{class}}>
        <ol id = "attempts">
        </ol>
      </div> --}}
      {{/if}}
    </form>
  </div>
</div>
